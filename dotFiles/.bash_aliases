# Personal BASH aliases

# file/directory
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -l'
alias lla='ls -la'
alias l='ls'
alias grep='grep --color=auto'

# common shortcuts
alias neo='neofetch'
alias v='vim'

# Proton GE
alias proton='bash ~/cproton.sh'

# packages
# arch
alias pas='sudo pacman -S --needed'
alias par='sudo pacman -R'
alias paq='pacman -Q'

# scripting
alias cme='chmod 755'
alias py='python3'
alias bs='bash'
alias ark='bash ~/.scripts/bash/arkClassNames.sh'
